<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.SwipeExit" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSwipeToDismiss">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.TxtLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/colorTxtInverse</item>
    </style>

    <style name="AppTheme.DialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColorPrimary">@color/colorTxt</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:colorControlNormal">@color/colorTxt</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:itemBackground">@color/windowBackgroundDialog</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="AppTheme.ToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTxt</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.CustomRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <style name="AppTheme.Dialog_FullScreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/windowBackgroundAlternate</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
